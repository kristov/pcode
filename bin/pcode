#!/usr/bin/env perl

use strict;
use warnings;
use lib qw( /home/ceade/src/personal/perl/pcode/lib );
use Carp;
$SIG{__DIE__} = \&Carp::confess;
$SIG{__WARN__} = \&Carp::confess;
use Pcode::App;
my $args = $ARGV[0] ? { file => $ARGV[0] } : ();
my $app = Pcode::App->new( $args ? $args : () );
$app->run;
